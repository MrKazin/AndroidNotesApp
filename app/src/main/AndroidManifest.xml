<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.notesapp">
    
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NotesApp">

        <activity
            android:name=".UpdateTagActivity"
            android:label="Update Tag"
            android:parentActivityName=".TagsActivity" />
        <activity
            android:name=".AddTagActivity"
            android:label="Add Tag"
            android:parentActivityName=".TagsActivity" />
        <activity
            android:name=".UpdateNoteActivity"
            android:label="Update Note"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".TagsActivity"
            android:label="Tags"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".AddNoteActivity"
            android:label="Add Note"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".SetAlarmActivity"
            android:label="Set Alarm For Note"
            android:parentActivityName=".MainActivity"/>


        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>